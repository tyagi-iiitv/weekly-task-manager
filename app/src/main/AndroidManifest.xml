<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tyagi.anjul.weeklytaskmanager" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateNewTask"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_create_new_task" >
        </activity>
        <activity
            android:name=".DeleteTask"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_delete_task" >
        </activity>
        <activity
            android:name=".MarkAsDone"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_mark_as_done" >
        </activity>
        <activity
            android:name=".Task_activity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_task_activity" >
        </activity>
    </application>

</manifest>
